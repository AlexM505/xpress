<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:padding="4dp"
              android:layout_height="100dp"
              android:id="@+id/expired_design">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

        <TextView
                android:id="@+id/txtExpiredName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="Nombre Producto"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

        <TextView
                android:id="@+id/txtExpiredCant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Cantidad: 999"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryText"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="Estado:"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryText"/>

        <TextView
                android:id="@+id/txtExpiredState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CADUCADO"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorRed"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="4dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="Fecha de expiracion:"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryText"/>

        <TextView
                android:id="@+id/txtExpiredDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/12/2999"
                android:textSize="16sp"
                android:textColor="@color/colorRed"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layerType="software"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/line"/>

</LinearLayout>